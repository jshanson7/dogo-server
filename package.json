{
  "name": "dogo-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm run update-schema && npm run compile && npm run db:build",
    "start": "npm run dev",
    "dev": "NODE_ENV=development ./node_modules/.bin/gulp dev --harmony",
    "prod": "NODE_ENV=production node --harmony ./src/index.js",
    "compile": "./node_modules/.bin/gulp compile --harmony",
    "update-schema": "NODE_ENV=development ./node_modules/.bin/gulp updateSchema --harmony",
    "watch:compile": "./node_modules/.bin/gulp watch:compile --harmony",
    "test": "npm run mocha",
    "mocha": "NODE_ENV=test ./node_modules/.bin/gulp mocha --harmony",
    "watch:mocha": "NODE_ENV=test ./node_modules/.bin/gulp watch:mocha --harmony",
    "coverage": "node --harmony ./node_modules/.bin/istanbul test ./node_modules/.bin/_mocha /bin/ -- -R spec",
    "db:rebuild": "npm run db:drop && npm run db:build",
    "db:build": "npm run db:build:prod && npm run db:build:test && npm run db:build:dev",
    "db:build:prod": "NODE_ENV=production ./node_modules/.bin/gulp db:build --harmony",
    "db:build:test": "NODE_ENV=test ./node_modules/.bin/gulp db:build --harmony",
    "db:build:dev": "NODE_ENV=development ./node_modules/.bin/gulp db:build --harmony",
    "db:drop": "npm run db:drop:prod && npm run db:drop:test && npm run db:drop:dev",
    "db:drop:prod": "NODE_ENV=production ./node_modules/.bin/gulp db:drop --harmony",
    "db:drop:test": "NODE_ENV=test ./node_modules/.bin/gulp db:drop --harmony",
    "db:drop:dev": "NODE_ENV=development ./node_modules/.bin/gulp db:drop --harmony",
    "lint": "eslint src"
  },
  "dependencies": {
    "babel-runtime": "^5.8.24",
    "bookshelf": "^0.8.2",
    "graphql": "^0.4.4",
    "graphql-relay": "^0.3.2",
    "knex": "^0.8.6",
    "koa": "^1.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-compress": "^1.0.8",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.2.0",
    "koa-helmet": "^0.2.0",
    "koa-logger": "^1.3.0",
    "koa-mount": "^1.3.0",
    "koa-passport": "^1.2.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^5.1.2",
    "koa-session": "^3.3.1",
    "koa-validate": "^0.2.11",
    "lodash": "^3.10.1",
    "pg": "^4.4.2",
    "revalidator": "^0.3.1",
    "verror": "^1.6.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "chance": "^0.7.7",
    "eslint": "^1.5.0",
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.0.0",
    "gulp-istanbul": "^0.10.0",
    "gulp-mocha": "^2.1.3",
    "gulp-nodemon": "^2.0.4",
    "gulp-spawn-mocha": "^2.2.1",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.3.20",
    "node-debug": "^0.1.0",
    "node-inspector": "^0.12.3",
    "path": "^0.12.7",
    "run-sequence": "^1.1.3",
    "supertest": "^1.1.0",
    "yargs": "^3.25.0"
  }
}
