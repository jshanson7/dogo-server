{
  "name": "dogo-server",
  "version": "0.0.1",
  "private": true,
  "main": "src",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run gulp -- build",
    "rebuild": "npm run gulp -- rebuild",
    "build:staging": "NODE_ENV=staging npm run build",
    "dev": "npm run gulp -- dev",
    "prod": "NODE_ENV=production npm run forever -- start .",
    "prod:stop": "NODE_ENV=production npm run forever -- stop .",
    "compile": "npm run gulp -- compile",
    "compile:watch": "npm run gulp -- compile:watch",
    "test": "NODE_ENV=test npm run gulp -- test",
    "test:staging": "NODE_ENV=staging npm run gulp -- test",
    "test:watch": "NODE_ENV=test npm run gulp -- test:watch",
    "cover": "NODE_ENV=test npm run gulp -- cover",
    "cover:staging": "NODE_ENV=staging npm run gulp -- cover",
    "db:build": "npm run gulp -- db:build",
    "db:drop": "npm run gulp -- db:drop",
    "db:rebuild": "npm run gulp -- db:rebuild",
    "db:build:prod": "NODE_ENV=production npm run gulp -- db:build",
    "db:build:test": "NODE_ENV=test npm run gulp -- db:build",
    "db:build:dev": "NODE_ENV=development npm run gulp -- db:build",
    "db:drop:prod": "NODE_ENV=production npm run gulp -- db:drop",
    "db:drop:test": "NODE_ENV=test npm run gulp -- db:drop",
    "db:drop:dev": "NODE_ENV=development npm run gulp -- db:drop",
    "db:build:all": "npm run db:build:prod && npm run db:build:test && npm run db:build:dev",
    "db:drop:all": "npm run db:drop:prod && npm run db:drop:test && npm run db:drop:dev",
    "db:rebuild:all": "npm run db:drop:all && npm run db:build:all",
    "encrypt:secrets": "travis login --org && travis encrypt-file src/config/secrets.json src/config/secrets.json.enc --add",
    "lint": "npm run gulp -- lint",
    "gulp": "NODE_PATH=src node_modules/.bin/gulp",
    "node": "NODE_PATH=src node .",
    "forever": "NODE_PATH=src node_modules/.bin/forever"
  },
  "dependencies": {
    "babel-runtime": "^5.8.29",
    "bookshelf": "^0.9.1",
    "co": "^4.6.0",
    "forever": "^0.15.1",
    "graphql": "^0.4.12",
    "graphql-relay": "^0.3.5",
    "knex": "^0.9.0",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^2.0.1",
    "koa-compress": "^1.0.8",
    "koa-convert": "^1.1.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.4.2",
    "koa-helmet": "^1.0.0-alpha.1",
    "koa-logger": "^1.3.0",
    "koa-mount": "^1.3.0",
    "koa-passport": "^1.2.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^5.2.3",
    "koa-session": "^3.3.1",
    "lodash": "^3.10.1",
    "pg": "^4.4.3",
    "revalidator": "^0.3.1",
    "verror": "^1.6.0"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-eslint": "^4.1.3",
    "babel-relay-plugin": "^0.3.0",
    "chance": "^0.7.7",
    "coveralls": "^2.11.4",
    "eslint": "^1.5.0",
    "gulp": "^3.9.0",
    "gulp-babel-istanbul": "^0.10.1",
    "gulp-eslint": "^1.0.0",
    "gulp-mocha": "^2.1.3",
    "gulp-nodemon": "^2.0.4",
    "gulp-spawn-mocha": "^2.2.1",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "run-sequence": "^1.1.3",
    "supertest": "^1.1.0"
  },
  "babel": {
    "stage": 0
  }
}
